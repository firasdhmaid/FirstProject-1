{% extends 'base.html.twig' %}

{% block title %}Reclamations{% endblock %}

{% block body %}
    <h1>Reclamations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sujet</th>
                <th>DateCreation</th>
                <th>Status</th>
                <th>Message</th>
                <th>Captureecranpath</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.sujet }}</td>
                <td>{{ reclamation.dateCreation }}</td>
                <td>{{ reclamation.status }}</td>
                <td>{{ reclamation.message }}</td>
                <td>{{ reclamation.captureecranpath }}</td>
                <td>
                    <a href="{{ path('app_reclamations_show', {'id': reclamation.id}) }}">show</a>
                    <a href="{{ path('app_reclamations_edit', {'id': reclamation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reclamations_new') }}">Create new</a>
{% endblock %}
