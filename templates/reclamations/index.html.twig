{% extends 'base.html.twig' %}

{% block title %}Reclamations{% endblock %}

{% block body %}
    <h1>Reclamations</h1>
    <a href="{{ path('app_reclamations_new') }}" class="new">Create new</a>

    <div class="row">
                <div class="cards-header">
                    <p class="header-text">Sujet</p>
                    <p class="header-text">Message</p>
                    <p class="header-text">Date de Cr√©ation</p>
                    <p class="header-text">Statut</p>
                    <p class="header-text">Action</p>
                </div>
        {% for reclamation in reclamations %}
            <div class="card">
                <div class="card-body">
                    <p class="card-text">{{ reclamation.sujet }}</p>
                    <p class="card-text" ><a href="{{ path('app_reclamations_show', {'id': reclamation.id}) }}" class="show">Show more</a>{{ reclamation.message }}</p>
                    <p class="card-text">{{ reclamation.dateCreation }}</p>
                    <p class="card-text">{{ reclamation.status }}</p>
                    <div class="card-text">
                    <a href="{{ path('app_reclamations_edit', {'id': reclamation.id}) }}" >Edit</a>
                    <div>{{ include('reclamations/_delete_form.html.twig') }}</div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col">
                <p>No reclamations found</p>
            </div>
        {% endfor %}
    </div>
    <style>
    .row{
        display:flex;
        flex-direction:column;
        width:95.5%;
        margin:1.5%;
        color:#ffffff;
    }
    .cards-header{
        display:flex;
        flex-direction:row;
        justify-content:space-between;
        
        
    }
    .header-text{
        position:relative;
        width:10em;
        color:#797979;
        text-decoration-line: underline;
      min-width:15em;
        max-width:15em;
    }

  
    .card{
        background-color: #323232;
        border-radius:20px;
        margin-bottom:10px;
    }
    .card-body {
        display:flex;
        flex-direction:row;
        justify-content:space-between;
        width:100%;  
    }
    .card-text{
        position:relative;
        min-width:15em;
        max-width:15em;
           display:flex;
        flex-direction:row;
    align-items:center;

    }

    .show{
        position: absolute;
        bottom:-2em;
        right:1em;
        color:#797979;
        text-decoration-line: underline;
        font-size:15px
    }
    .new{
        float:right;
    }
   
</style>
{% endblock %}

