{% extends 'base.html.twig' %}

{% block title %}liste!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<h1>la liste des auteurs</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Nom d'utilisateur</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td>{{ author.username | upper }}</td>
                    <td>{{ author.email }}</td>
                    <td>
                        <a href="{{ path('app_author_delete', {'id': author.id}) }}">Supprimer</a>
                        <a href="{{ path('app_author_edit', {'id': author.id}) }}">editer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('author_ajout') }}">addlink</a>
    <a href="{{ path('dqlorder') }}">DQL</a>
    <a href="{{ path('ordered_username') }}">Ascendant</a>
</div>

{% endblock %}